import turtle          
win = turtle.Screen()  
t = turtle.Turtle()

# add some display options
t.pensize(4)            # increase pensize (takes integer)
t.pencolor("maroon")     # set pencolor (takes string)
t.shape("turtle")

#choose direction to start drawing
 
t.left(90)            

# draw the square
for i in range(4):
    t.forward(100)
    t.left(90)

#position turtle for the next shape    
t.right(170)

#draw next shape
for i in range(3):
    t.forward(75)
    t.left(120)

# end commands
win.mainloop()       
